#!/usr/bin/env bash
#checking if there is a file or not

(( file="school" ))

if [ -e $file ]
then
	echo "$file file exists"

elif [ ! -e $file ]
then
	echo "$file file does not exist"

elif [ -s $file ]
then
	echo "$file file is empty"

elif [ ! -s $file ]
then 
	echo "$file is not empty"

elif [ -f $file ]
then
	echo "$file file is a regular file"


fi
